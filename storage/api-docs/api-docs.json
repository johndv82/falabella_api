                ],
                "description": "Registra un nuevo pedido del Cliente",
                "operationId": "store",
                "requestBody": {
                    "description": "Datos de Pedido",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "cliente_id": {
                                        "type": "integer"
                                    },
                                    "carrito_id": {
                                        "type": "integer"
                                    },
                                    "fecha": {
                                        "type": "date"
                                    },
                                    "despacho_id": {
                                        "type": "integer"
                                    },
                                    "pago_id": {
                                        "type": "integer"
                                    },
                                    "estado": {
                                        "type": "integer"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "cliente_id": 1,
                                    "carrito_id": 1,
                                    "fecha": "02/02/2022",
                                    "despacho_id": 3,
                                    "pago_id": 2,

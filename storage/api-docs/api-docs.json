                    },
                    "409": {
                        "description": "Datos de registro en conflicto"
                    }
                }
            }
        },
        "/pagos": {
            "post": {
                "tags": [
                    "Pagos"
                ],
                "description": "Registra un nuevo pago del Cliente",
                "operationId": "store",
                "requestBody": {
                    "description": "Datos de pago",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "properties": {
                                    "cliente_id": {
                                        "type": "integer"
                                    },
                                    "metodo_pago": {
                                        "type": "string"
                                    },
                                    "monto_pago": {
                                        "type": "number"
                                    },
                                    "cupon_descuento": {
                                        "type": "string"
                                    },
                                    "fecha": {
                                        "type": "date"
                                    }
                                },
                                "type": "object",
                                "example": {
                                    "cliente_id": 1,
                                    "metodo_pago": "CREDITO",
                                    "monto_pago": 450.5,
                                    "cupon_descuento": "CGVFFD6FGF7",
